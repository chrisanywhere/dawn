<ol class="breadcrumb">
  <li><a href="/"><span class="icon icon-home"></span></a></li>
  {% if collection.title != blank and collection.title != page_title and template != 'index' %}
  <li><a href="{{ collection.url }}">{{ collection.title }}</a></li>{% endif %}
  {% if blog.title != blank and blog.title != page_title %}
  <li><a href="{{ blog.url }}">{{ blog.title }}</a></li>{% endif %}
  {% if article.title != blank and article.title != page_title %}
  <li><a href="{{ article.url }}">{{ article.title }}</a></li>{% endif %}
  {% if page.title != blank and page.title != page_title %}
  <li><a href="{{ page.url }}">{{ page.title }}</a></li>{% endif %}
  {% if product.title != blank and product.title != page_title %}
  <li><a href="{{ product.url | within: collection }}">{{ product.title }}</a></li>{% endif %}
  {% if current_tags == blank %}
    <li class="active">{{ page_title }}</li>
  {% else %}

    <li class="active">Filtered by {{ current_tags | join: ' + ' }}</li>
  {% endif %}
</ol>