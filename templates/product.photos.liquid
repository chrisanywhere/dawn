<div class="container">
	<header>
		<div class="page-header">
			<h1>Photo Gallery</h1>
			<p class="text-right"><a target="_blank" href="//instagram.com/spacemakerwardrobes/"><span class="icon icon-instagram"></span> View on Instagram</a></p>
		</div>
	</header>

	<div class="row thumbnails">
		{% for image in product.images %}
		<div class="col-xs-6 col-md-3">
			<a data-fancybox="instafeedGallery" rel="gallery" href="{{ image | img_url: 'grande' }}" title="{{ image.alt | escape }}" data-caption="{{ image.alt | escape }}">
				<img src="{{ image | img_url: '300x300', crop: 'center' }}" class="img-responsive thumbnail center-block" alt="{{ image.alt | escape }}" />
			</a>
		</div>
		{% endfor %}
	</div>

	<hr>

	<p class="text-center"><a target="_blank" href="//instagram.com/spacemakerwardrobes/"><span class="icon icon-instagram"></span> View all our photos on Instagram &raquo;</a></p>

</div>